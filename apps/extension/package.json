{
  "name": "@ytclipper/extension",
  "version": "1.0.0",
  "description": "Chrome extension for collecting YouTube timestamps and highlights",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "dev:firefox": "cross-env __FIREFOX__=true vite build --mode development --watch",
    "build": "vite build",
    "build:firefox": "cross-env __FIREFOX__=true vite build",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@ytclipper/ui": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@ytclipper/eslint-config": "workspace:*",
    "@ytclipper/prettier-config": "workspace:*",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.0",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  }
}
