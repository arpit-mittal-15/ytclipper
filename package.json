{
  "name": "ytclipper",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:app": "pnpm --filter app dev",
    "dev:landing": "pnpm --filter landing dev",
    "dev:extension": "pnpm --filter @ytclipper/extension dev",
    "dev:extension:firefox": "pnpm --filter @ytclipper/extension dev:firefox",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,mdx}\"",
    "format:app": "pnpm --filter app format",
    "format:app:check": "pnpm --filter app format:check",
    "format:extension": "pnpm --filter @ytclipper/extension format",
    "format:extension:check": "pnpm --filter @ytclipper/extension format:check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check",
    "dev:backend": "cd backend && go run ./cmd",
    "dev:all": "concurrently -n app,landing -c cyan,green \"pnpm dev:app\" \"pnpm dev:landing\"",
    "clean": "turbo run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@ytclipper/eslint-config": "workspace:*",
    "@ytclipper/prettier-config": "workspace:*",
    "concurrently": "^9.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "apps/app/src/**/*.{ts,tsx}": [
      "cd apps/app && pnpm lint:fix",
      "prettier --write"
    ],
    "apps/landing/src/**/*.{ts,tsx}": [
      "cd apps/landing && pnpm lint:fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{ts,tsx}": [
      "cd packages/ui && pnpm lint:fix",
      "prettier --write"
    ],
    "apps/extension/src/**/*.{ts,tsx}": [
      "cd apps/extension && pnpm lint:fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,mdx}": [
      "prettier --write"
    ]
  }
}
